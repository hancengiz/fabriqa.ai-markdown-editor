{
  "name": "kiro-markdown-editor",
  "displayName": "Kiro Markdown Editor",
  "description": "Obsidian-like markdown editor with Live Preview, Source, and Reading modes",
  "version": "0.1.0",
  "publisher": "kiro",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:kiro.markdownEditor",
    "onView:kiro.markdownTree"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "kiro.markdownEditor",
        "displayName": "Kiro Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "kiro.markdownTree",
          "name": "KIRO",
          "icon": "resources/icon.svg",
          "contextualTitle": "Kiro Markdown"
        }
      ]
    },
    "commands": [
      {
        "command": "kiro.openMarkdownEditor",
        "title": "Open with Kiro Editor",
        "category": "Kiro"
      },
      {
        "command": "kiro.switchToLivePreview",
        "title": "Switch to Live Preview Mode",
        "category": "Kiro",
        "icon": "$(eye)"
      },
      {
        "command": "kiro.switchToSource",
        "title": "Switch to Source Mode",
        "category": "Kiro",
        "icon": "$(code)"
      },
      {
        "command": "kiro.switchToReading",
        "title": "Switch to Reading Mode",
        "category": "Kiro",
        "icon": "$(book)"
      },
      {
        "command": "kiro.createFile",
        "title": "Create New File",
        "category": "Kiro",
        "icon": "$(new-file)"
      },
      {
        "command": "kiro.deleteFile",
        "title": "Delete File",
        "category": "Kiro",
        "icon": "$(trash)"
      },
      {
        "command": "kiro.renameFile",
        "title": "Rename File",
        "category": "Kiro",
        "icon": "$(edit)"
      },
      {
        "command": "kiro.refreshTree",
        "title": "Refresh Tree View",
        "category": "Kiro",
        "icon": "$(refresh)"
      },
      {
        "command": "kiro.collapseSection",
        "title": "Collapse Section",
        "category": "Kiro"
      },
      {
        "command": "kiro.expandSection",
        "title": "Expand Section",
        "category": "Kiro"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kiro.createFile",
          "when": "view == kiro.markdownTree",
          "group": "navigation"
        },
        {
          "command": "kiro.refreshTree",
          "when": "view == kiro.markdownTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kiro.openMarkdownEditor",
          "when": "view == kiro.markdownTree && viewItem == file",
          "group": "inline"
        },
        {
          "command": "kiro.renameFile",
          "when": "view == kiro.markdownTree && viewItem == file",
          "group": "edit@1"
        },
        {
          "command": "kiro.deleteFile",
          "when": "view == kiro.markdownTree && viewItem == file",
          "group": "edit@2"
        },
        {
          "command": "kiro.createFile",
          "when": "view == kiro.markdownTree && viewItem == section",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "kiro.switchToLivePreview",
          "when": "activeCustomEditorId == kiro.markdownEditor",
          "group": "navigation@1"
        },
        {
          "command": "kiro.switchToSource",
          "when": "activeCustomEditorId == kiro.markdownEditor",
          "group": "navigation@2"
        },
        {
          "command": "kiro.switchToReading",
          "when": "activeCustomEditorId == kiro.markdownEditor",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Kiro Markdown Editor",
      "properties": {
        "kiro.configFile": {
          "type": "string",
          "default": ".vscode/markdown-extension-config.json",
          "description": "Path to the markdown extension configuration file"
        },
        "kiro.defaultMode": {
          "type": "string",
          "enum": [
            "livePreview",
            "source",
            "reading"
          ],
          "default": "livePreview",
          "description": "Default editing mode when opening markdown files"
        },
        "kiro.theme": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "default": "auto",
          "description": "Theme for the markdown editor"
        },
        "kiro.fontSize": {
          "type": "number",
          "default": 14,
          "minimum": 8,
          "maximum": 32,
          "description": "Font size for the editor"
        },
        "kiro.lineHeight": {
          "type": "number",
          "default": 1.6,
          "minimum": 1.0,
          "maximum": 3.0,
          "description": "Line height multiplier"
        },
        "kiro.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "jest",
    "package": "vsce package"
  },
  "dependencies": {
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.0",
    "@codemirror/language": "^6.10.0",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/search": "^6.5.5",
    "@codemirror/autocomplete": "^6.12.0",
    "@codemirror/lint": "^6.5.0",
    "@codemirror/lang-markdown": "^6.2.4",
    "@lezer/markdown": "^1.2.0",
    "@lezer/highlight": "^1.2.0",
    "marked": "^11.1.1",
    "dompurify": "^3.0.8",
    "jsdom": "^23.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.6",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "@vscode/vsce": "^2.22.0"
  }
}
